generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum LotteryStatus {
  OPEN
  CLOSED
  DRAWN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  tickets   Ticket[]
  createdAt DateTime @default(now())
}

model Lottery {
  id               String        @id @default(uuid())
  name             String
  status           LotteryStatus @default(OPEN)
  startsAt         DateTime
  endsAt           DateTime

  tickets          Ticket[]

  winnerTicketId   String?   // ID del ticket ganador (sin relaci√≥n)

  createdAt        DateTime @default(now())
}

model Ticket {
  id         String   @id @default(uuid())
  lotteryId  String
  userId     String

  lottery    Lottery @relation(fields: [lotteryId], references: [id])
  user       User    @relation(fields: [userId], references: [id])

  createdAt  DateTime @default(now())

  @@index([lotteryId, userId])
}
